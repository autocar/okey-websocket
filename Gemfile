# A sample Gemfile
source "http://rubygems.org"

gem 'eventmachine'#, :git => 'git://github.com/eventmachine/eventmachine.git'
gem "em-hiredis", :git => 'git://github.com/whatupdave/em-hiredis.git'
gem "em-websocket"
gem 'em-http-request'

gem "rake"
gem "thin"
gem "sinatra"

gem "json"
gem "daemons", "~> 1.1.8"

group :test do
  gem "rspec"
  gem "em-spec", :git => "git://github.com/bcg/em-spec.git"
  gem "em-http-request"

  gem "em-websocket-client", "~> 0.1.1"
end

